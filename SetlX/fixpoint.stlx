solve := procedure(f, x0) {
    x := x0;
    for (n in [1 .. 10000]) {
        oldX := x;
        x := f(x);
        print(x);
        if (abs(x - oldX) < 1.0e-15) {
            return x;
        }
    }
};

print("solution to x = cos(x): ", solve(cos, 0));
print("solution to x = 1/(1+x): ", solve(x |-> 1/(1 + x), 0.0));


